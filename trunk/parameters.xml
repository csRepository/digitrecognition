<?xml version="1.0" encoding="UTF-8"?>

<network>
    <parameters>
        <hidden>25</hidden>      <!-- liczba neuronow ukrytch nie uwzgledniajac neuronu bias -->
        <patterns>
            <train>300</train>    <!--  liczba wzorcow trenujacych -->
            <test>10000</test>    <!--  liczba wzorcow testujacych -->
        </patterns>
        <error>0.03</error>       <!-- max. blad RMS jaki musi osiagnac siec - 0 jesli nie uwazgledniac-->
        <epochs>30</epochs>       <!-- liczba iteracji - 0 jesli nie uwzgledniac-->
        <algorithm>bp</algorithm>  <!-- bp/rp/qp/dbd/ssab -->
        <change_method>online</change_method> <!-- zmiana wag (online/batch) -->
    </parameters>
    <algorithm>
        <name>bp</name>         <!-- backpropagation -->
        <parameter attr="learning_rate">0.1</parameter>
        <parameter attr="momentum">0.9</parameter>
    </algorithm>
    <algorithm>
         <name>rp</name>        <!--resilentpropagation-->
         <parameter attr="deltamax">1.0</parameter>
         <parameter attr="deltamin">0.000001</parameter>
         <parameter attr="deltazero">0.05</parameter>
         <parameter attr="decfactor">0.5</parameter>
         <parameter attr="incfactor">1.2</parameter>
    </algorithm>
     <algorithm>                <!--quickpropagation-->
         <name>qp</name>
         <parameter attr="learning_rate">0.01</parameter>
         <parameter attr="momentum">0.9</parameter>
         <parameter attr="mode_switch_treshold">0.0</parameter>
         <parameter attr="max_growth_factor">1.75</parameter>
    </algorithm>
</network>
